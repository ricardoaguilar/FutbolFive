azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24
gris_texto = #7A7A7A

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-btwd78');
	src:url('../fonts/icomoon.eot?#iefix-btwd78') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-btwd78') format('woff'),
		url('../fonts/icomoon.ttf?-btwd78') format('truetype'),
		url('../fonts/icomoon.svg?-btwd78#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	bottom 0
	color gris_oscuro
	font-family Arial
	font-size 16px
	


footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%

	
	h3
		font-size 14px
		font-weight normal

		strong
			display block

			.empresa
				color black
				&:before
				&:after
					content " - "



header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1

	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px
	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
			
		.organizar
			background naranja
			color white
			margin -5px 1em 0 0
			padding 0.2em 0.5em
			font-style italic
			text-decoration none
			text-shadow 1px 1px 0px black
			float right

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			position relative
			margin 0 1em 0 0
			z-index 2
			img
				width 50px
				border-radius 50%

		.opcion
			background naranja
			color white
			display block
			padding 3px
			text-align right
			right 0
			top 15px
			position absolute
			width 50%
			z-index 0

nav
	background azul
	position relative
	
		

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		

		li
			display inline-block

			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.partidos
	padding 0.5em
	
	.partido
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black,0.5)
		color gris_texto
		margin-bottom 1em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.inscritos
				float right

				.inscritoE
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					&:before
						font-family "iconos"
						font-size 1em
						content "\e601"

				.inscritoS
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					&:before
						font-family "iconos"
						font-size 1em
						content "\e600"

				
			.registro
				float left
					
				.inscribirse 
					background naranja
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px 
					text-decoration none

				.detalle
					background naranja
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px 
					text-decoration none
				
									
		.descripcion
			color gris_texto

			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

					.nombreAutor
						color naranja


				.fecha
					float right
					margin 0 1em

				.horario 
					background azul
					color white
					padding 0.2em 0.5em
					text-decoration none


				.titulo
					color gris_oscuro
					border-radius 0.5em
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0


			.imagen
				float left
				margin 0 0 0 0
				img
					height 160px
					vertical-align top
					width 120px

.container
	text-align left
	border-style solid
	border-width 1px 1px 1px 1px

	.main_content
		background white

		.header
			overflow hidden
			padding 0 0 0 1em

			.hit
				text-decoration none
				font-size 14px
				padding 0 0 1em 0
		
		.body
			padding 0 0 0 2em
					
			.botonSesion
				display block
				text-align left
				padding 0 0 2em 2em
				
			.inputs
				border 0 
				padding 0 0 0 2em

				.rectangulo
					padding 0 0 1.5em 0 


	.footer_container
		padding 0 0 0 4em
		margin 1em 0
		font-weight bold 

		.registro_link
			text-decoration none
		
				

@media screen and (min-width: 768px)

	.partidos
		.partido
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%

	.botonSesion
		display block
		text-align left

